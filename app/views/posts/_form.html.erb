<%= form_with model: post do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class:'form-control',placeholder:"Title" %>
    <% post.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :description %><br>
    <%= form.text_area :description, class:'form-control',placeholder:'Description' %><br>
    <% post.errors.full_messages_for(:description).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "submit", class:'btn btn-lg btn-dark btn-block text-uppercase w-100' %>
  </div>
<% end %>
